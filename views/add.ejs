<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1 class=" text-xl">Create a new post</h1>
    <hr class="opacity-10">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class="mt-2 block w-1/3  rounded-lg px-3 py-2 " type="file" name="postimage">
        <input class="mt-2 text-black block w-1/3 border-2 rounded-lg px-3 py-2 " type="text" name="title" placeholder="Title">
        <textarea class="mt-2 text-black block w-1/3 h-60 border-2 rounded-lg px-3 py-2 " type="text" name="description" placeholder="Description"></textarea>
        <input class="mt-2 block w-1/3  rounded-lg px-3 py-2 bg-red-700 text-white " type="submit" value="Create new Post">
    </form>
</div>

